{
    "name": "sentgine/migration",
    "description": "A standalone database migration library for PHP.",
    "type": "library",
    "keywords": ["database", "migration", "mysql", "php"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sentgine\\Migration\\": "src/"
        },
        "files": [
			"functions/core.php"
    	]
    },
    "authors": [
        {
            "name": "Adrian Navaja",
            "email": "sentgine@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "sentgine/arise": "^2.0.0"
    },
    "require-dev": {
        "pestphp/pest": "2.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
